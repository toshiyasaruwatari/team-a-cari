.items
  .header
    .icon
      = image_tag('//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?817106341', class: 'item-img')
  .main
    .main-body
      .title
        商品の情報を入力
      .upload
        .upload-head
          出品画像
        .upload-need
          必須
        .upload-description
          最大10枚までアップロードできます
        .upload-drop
          .upload-drop__description
            ドラッグアンドドロップ
            またはクリックしてファイルをアップロード
      .item
        .item-group
          .item-head
            商品名
          .item-need
            必須
          %input.item-form{placeholder: "商品名（必須 40文字まで）", value: ""}/
        .description-group
          .description-head
            商品の説明
          .description-need
            必須
          %textarea.description-form{placeholder: "商品の説明(必須 1,000文字以内)(色、素材、重さ、定価、注意点など)例)2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: "5"}

      .detail
        .detail-head
          商品の詳細
        .detail-box
          .category
            .category-head
              カテゴリー
            .category-need
              必須
            .category-form
              .category-wrap
                %select.select-category
                  %option{value: ""} ---
                  %option{value: "1"} レディース
                  %option{value: "2"} メンズ
                  %option{value: "3"} ベビー・キッズ
                  %option{value: "4"} インテリア・住まい・小物
                  %option{value: "5"} 本・音楽・ゲーム
                  %option{value: "1328"} おもちゃ・ホビー・グッズ
                  %option{value: "6"} コスメ・香水・美容
                  %option{value: "7"} 家電・スマホ・カメラ
                  %option{value: "8"} スポーツ・レジャー
                  %option{value: "9"} ハンドメイド
                  %option{value: "1027"} チケット
                  %option{value: "1318"} 自動車・オートバイ
                  %option{value: "10"} その他
                  = fa_icon 'angle-down', class: 'category-icon'
          .state
            .state-head
              商品の状態
            .state-need
              必須
            .state-form
              .state-wrap
                .state-base
                  %select.select-state
                    %option{value: ""} ---
                    %option{value: "1"} 新品、未使用
                    %option{value: "2"} 未使用に近い
                    %option{value: "3"} 目立った傷や汚れなし
                    %option{value: "4"} やや傷や汚れあり
                    %option{value: "5"} 傷や汚れあり
                    %option{value: "6"} 全体的に状態が悪い
                  = fa_icon 'angle-down', class: 'state-icon'
      .delivery__wrapper
        .delivery
          .delivery-head
            配送について
          .delivery-question
            = fa_icon 'question-circle', class: 'icon'
          .delivery-box
            .burden
              .burden-head
                配送料の負担
              .burden-need
                必須
              .burden-form
                .burden-wrap
                  .burden-base
                    %select.select-burden
                      %option{value: ""} ---
                      %option{value: "2"} 送料込み(出品者負担)
                      %option{value: "1"} 着払い(購入者負担)
                = fa_icon 'angle-down', class: 'burden-icon'
        .region
          .region-head
            発送元の地域
          .region-need
            必須
          .region-form
            .region-wrap
              .region-base
                %select.select-region
                  %option{value: ""} ---
                  %option{value: "1"} 北海道
                  %option{value: "2"} 青森県
                  %option{value: "3"} 岩手県
                  %option{value: "4"} 宮城県
                  %option{value: "5"} 秋田県
                  %option{value: "6"} 山形県
                  %option{value: "7"} 福島県
                  %option{value: "8"} 茨城県
                  %option{value: "9"} 栃木県
                  %option{value: "10"} 群馬県
                  %option{value: "11"} 埼玉県
                  %option{value: "12"} 千葉県
                  %option{value: "13"} 東京都
                  %option{value: "14"} 神奈川県
                  %option{value: "15"} 新潟県
                  %option{value: "16"} 富山県
                  %option{value: "17"} 石川県
                  %option{value: "18"} 福井県
                  %option{value: "19"} 山梨県
                  %option{value: "20"} 長野県
                  %option{value: "21"} 岐阜県
                  %option{value: "22"} 静岡県
                  %option{value: "23"} 愛知県
                  %option{value: "24"} 三重県
                  %option{value: "25"} 滋賀県
                  %option{value: "26"} 京都府
                  %option{value: "27"} 大阪府
                  %option{value: "28"} 兵庫県
                  %option{value: "29"} 奈良県
                  %option{value: "30"} 和歌山県
                  %option{value: "31"} 鳥取県
                  %option{value: "32"} 島根県
                  %option{value: "33"} 岡山県
                  %option{value: "34"} 広島県
                  %option{value: "35"} 山口県
                  %option{value: "36"} 徳島県
                  %option{value: "37"} 香川県
                  %option{value: "38"} 愛媛県
                  %option{value: "39"} 高知県
                  %option{value: "40"} 福岡県
                  %option{value: "41"} 佐賀県
                  %option{value: "42"} 長崎県
                  %option{value: "43"} 熊本県
                  %option{value: "44"} 大分県
                  %option{value: "45"} 宮崎県
                  %option{value: "46"} 鹿児島県
                  %option{value: "47"} 沖縄県
                  %option{value: "99"} 未定
                = fa_icon 'angle-down', class: 'region-icon'
          .day
            .day-head
              発送までの日数
            .day-need
              必須
            .day-form
              .day-wrap
                .day-base
                  %select.select-day
                    %option{value: ""} ---
                    %option{value: "1"} 1~2日で発送
                    %option{value: "2"} 2~3日で発送
                    %option{value: "3"} 4~7日で発送
                  = fa_icon 'angle-down', class: 'day-icon'
      .sale
        .sale-head
          販売価格(300〜9,999,999)
        .sale-question
          = fa_icon 'question-circle', class: 'icon'
        .sale-box
          .price
            .price-group
              .price-group__head
                価格
              .price-group__need
                必須
            .price-input
              .price-wrap
                ¥
                .price-base
                  %input.price-base__form{placeholder: "例）300", value: ""}/
          .fee
            .fee-left
              販売手数料(10%)
            .fee-right -
          .profit
            .profit-left
              販売利益
            .profit-right -
      .exhibit
        .exhibit-box
          %p.caution-text
            = link_to '/jp/help_center/getting_started/prohibited_items/', class: "caution-text-link" do
              禁止されている出品
            、
            = link_to '/jp/help_center/getting_started/prohibited_conduct/', class: "caution-text-link" do
              行為
            を必ずご確認ください。
          %p.caution-text
            またブランド品でシリアルナンバー等がある場合はご記載ください。
            = link_to '/jp/help_center/getting_started/counterfeit_goods/', class: "caution-text-link" do
              偽ブランドの販売
            は犯罪であり処罰される可能性があります。
          %p.caution-text
            また、出品をもちまして
            = link_to '/jp/seller_terms/', class: "caution-text-link" do
              加盟店規約
            に同意したことになります。
          %button.exhibit-button
            出品する
          %button.back-button
            もどる
    .footer
      = image_tag('/assets/poricy.png', class: "exhibit__footer")
